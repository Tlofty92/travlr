<section class="hero" style="background-image: url('{{heroImage}}'); background-size: cover; padding: 50px; color: white; text-align: center;">
  <h1>{{heroText}}</h1>
</section>

<section class="welcome-message" style="padding: 20px; text-align: center;">
  <h2>{{welcomeMessage}}</h2>
</section>

<section class="featured-destinations" style="display: flex; justify-content: space-around; padding: 20px;">
  {{#each featuredDestinations}}
    <div class="destination-card" style="width: 30%; border: 1px solid #ccc; border-radius: 8px; overflow: hidden; box-shadow: 0 2px 5px rgba(0,0,0,0.1);">
      <img src="{{this.image}}" alt="{{this.name}}" style="width: 100%; height: 200px; object-fit: cover;">
      <div style="padding: 15px;">
        <h3>{{this.name}}</h3>
        <p>{{this.description}}</p>
        <a href="{{this.link}}" style="color: #007BFF; text-decoration: none;">Learn More</a>
      </div>
    </div>
  {{/each}}
</section>

<section class="call-to-action" style="text-align: center; margin: 40px 0;">
  <a href="{{ctaLink}}" style="background-color: #007BFF; color: white; padding: 15px 30px; border-radius: 5px; text-decoration: none; font-weight: bold;">
    {{ctaText}}
  </a>
</section>
